$bog_pay_app $mol_page
	plugins /
		<= Theme $mol_theme_auto
	title \Bog Ping
	tools /
		<= Games_link $mol_button_minor
			click? <=> games_click? null
			sub / <= games_link_title @ \Игры
		<= Account_link $mol_button_minor
			click? <=> account_click? null
			sub / <= account_link_title @ \Личный кабинет
	body /
		<= Content
		<= Footer $bog_pay_app_footer
	Deck $mol_deck
		Switch => Switch
		Content => Content
		param \page
		items /
			<= Home_page $bog_pay_app_page_home
			<= Games_page $bog_pay_app_page_games
			<= Account_page $bog_pay_app_page_account
